<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answerBody"
        android:layout_marginTop="10dp"
        android:id="@+id/answerBody"
        android:textColor="#0A134E"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answerDO"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/answerBodyOwner"
        android:textColor="#0A134E"
        android:layout_below="@+id/answerBody"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/answerBodyOwner"
        android:layout_alignParentStart="true"
        android:id="@+id/viewComments1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerComments"
        android:layout_below="@+id/viewComments1"
        android:layout_marginLeft="50dp"
        android:textColor="#0A134E"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answerComments"
        android:id="@+id/viewComments2"/>

</RelativeLayout>