<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ie.dit.max.behaviouralbiometricphonelock.ChangePassword">

    <EditText
        android:id="@+id/oldPassword"
        android:hint="Old Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ligthBlue"
        android:textColorHint="@color/ligthBlue"
        android:backgroundTint="@color/ligthBlue"
        android:paddingStart="30dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        android:layout_alignEnd="@+id/newPassword1"/>

    <EditText
        android:id="@+id/newPassword1"
        android:hint="New Password"
        android:textColor="@color/ligthBlue"
        android:textColorHint="@color/ligthBlue"
        android:backgroundTint="@color/ligthBlue"
        android:paddingStart="30dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/oldPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/newPassword2"
        android:hint="Confirm New Password"
        android:textColor="@color/ligthBlue"
        android:textColorHint="@color/ligthBlue"
        android:backgroundTint="@color/ligthBlue"
        android:paddingStart="30dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/newPassword1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>


    <Button
        android:id="@+id/changePassword"
        android:text="Change Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:layout_below="@+id/newPassword2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
