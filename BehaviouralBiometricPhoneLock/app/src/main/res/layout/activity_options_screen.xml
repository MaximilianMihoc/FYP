<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ie.dit.max.behaviouralbiometricphonelock.OptionsScreen">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train System"
        android:background="@drawable/bg_button"
        android:id="@+id/goToTrainFirstScreen"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/goToStackOverflowApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country List Game"
        android:background="@drawable/bg_button"
        android:id="@+id/goToCountryListGame"
        android:layout_below="@+id/goToTrainFirstScreen"
        android:layout_alignEnd="@+id/changePassword"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stack Overflow App"
        android:background="@drawable/bg_button"
        android:id="@+id/goToStackOverflowApp"
        android:layout_below="@+id/goToCountryListGame"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:background="@drawable/bg_button"
        android:id="@+id/changePassword"
        android:layout_below="@+id/goToStackOverflowApp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_alignEnd="@+id/goToCrossValidation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate Test Data"
        android:background="@drawable/bg_button"
        android:id="@+id/goToCrossValidation"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/changePassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:background="@drawable/bg_button"
        android:id="@+id/logOutButton"
        android:layout_below="@+id/goToCrossValidation"
        android:layout_marginTop="24dp"
        android:layout_alignEnd="@+id/goToCrossValidation"
        android:layout_alignParentStart="true"/>

        <ProgressBar
            android:id="@+id/loadingPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
